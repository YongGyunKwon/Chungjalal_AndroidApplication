<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_newActivity_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="title"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView_newActivity_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="name"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_newActivity_opentime"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:text="time"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_newActivity_etc"
        android:layout_width="match_parent"
        android:layout_height="438dp"
        android:text="etc"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView_newActivity_location"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="location"
        android:textSize="20sp" />

    <Button
        android:id="@+id/intent_btn"
        android:layout_width="70dp"
        android:layout_height="115dp"
        android:background="@drawable/call" />


</LinearLayout>